<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF1B8"
    android:orientation="vertical" 
    tools:context="com.example.marieanne.spot.Evenement" >
<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

    <TextView
        android:id="@+id/editText1"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/nomEvent"
        android:textColor="#FF0000"
        android:textSize="25sp" />
      
    <ImageButton
        android:id="@+id/button4"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:adjustViewBounds="true"
        android:background="@drawable/boutonrond"
        android:gravity="center"
        android:padding="2dip"
        android:scaleType="fitCenter"
        android:src="@drawable/utilisa" />

  
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="421dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageEvent"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/amsterdam" />

            

            <TextView
                android:id="@+id/editText2"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/descriptionEvent" />
        </LinearLayout>
        
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
         >

        <Button
            android:id="@+id/button1"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:text="@string/info"
            android:background="#C8AD7F" />
        
        <Button
            android:id="@+id/button2"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:text="@string/prix"
            android:background="#C8AD7F" />
        
        <Button
            android:id="@+id/button3"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:text="@string/lieu"
            android:background="#C8AD7F" />
        
    </LinearLayout>

   
</LinearLayout>