<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#708090"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marieanne.spot.Accueil1" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="0sp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/art"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="0sp"
                android:layout_weight="1"
                android:padding="10dip"
                android:adjustViewBounds="true"
        		
        		android:scaleType="fitCenter"
				android:src="@drawable/art"
                android:background="@drawable/contour"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/balade"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="0sp"
                android:layout_weight="1"
                android:padding="10dip"
                android:adjustViewBounds="true"
        		
        		android:scaleType="fitCenter"
                android:src="@drawable/balade"
                android:background="@drawable/contour"
                android:contentDescription="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/resto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="0sp"
                android:layout_weight="1"
                android:padding="10dip"
                android:adjustViewBounds="true"
        		
        		android:scaleType="fitCenter"
                android:src="@drawable/resto"
                android:background="@drawable/contour"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/bar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="0sp"
                android:layout_weight="1"
                android:padding="10dip"
                android:adjustViewBounds="true"
        		
        		android:scaleType="fitCenter"
                android:src="@drawable/bar"
                android:background="@drawable/contour"
                android:contentDescription="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/concert"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="0sp"
                android:layout_weight="1"
                
                android:adjustViewBounds="true"
        		android:padding="10dip"
        		android:scaleType="fitCenter"
                android:src="@drawable/concert"
                android:background="@drawable/contour"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/shopping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="0sp"
                android:layout_weight="1"
                
                android:adjustViewBounds="true"
        		android:padding="10dip"
        		android:scaleType="fitCenter"
                android:src="@drawable/shopping"
                android:background="@drawable/contour"
                android:contentDescription="@null" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/boutonPlus"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boutonrond"
        android:gravity="center"
        android:text="@string/Plus"
        android:textColor="#000000"
        android:textSize="35dp" />

</RelativeLayout>